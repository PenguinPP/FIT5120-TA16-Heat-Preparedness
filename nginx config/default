server {
	listen			443 ssl default_server;
	server_name 		www.victoria-heat.ga victoria-heat.ga;
	ssl_certificate		/etc/nginx/sites-available/ssl/iteration3/certificate.crt;
	ssl_certificate_key	/etc/nginx/sites-available/ssl/iteration3/private.key;
	#react app and front-end
	location / {
		root /home/ubuntu/deployment/iteration3;
		index index.html;
		#try_files $uri /index.html;
		auth_basic "Please enter credentials.";
		auth_basic_user_file /etc/nginx/sites-available/auth/.htpasswd;
		expires -1;
		}
	location /notifications {
		proxy_set_header 	X-Real-IP $remote_addr;
		proxy_set_header 	X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header 	X-NginX-Proxy true;
		proxy_pass 		http://localhost:5001;
		proxy_set_header 	Host $http_host;
		proxy_cache_bypass 	$http_upgrade;
		proxy_redirect 		off;
		auth_basic		off;
		}
}
server {
	listen 		80;
	server_name 	www.victoria-heat.ga victoria-heat.ga;
	return 301 https://www.victoria-heat.ga;
}
server {
	listen			443 ssl;
	server_name		www.victoria-heat.tk victoria-heat.tk;
	ssl_certificate		/etc/nginx/sites-available/ssl/iteration1/certificate.crt;
	ssl_certificate_key	/etc/nginx/sites-available/ssl/iteration1/private.key;
	location / {
		root /home/ubuntu/deployment/iteration1;
		index index.html;
		#try_files $uri /index.html;
		auth_basic "Please enter credentials.";
		auth_basic_user_file /etc/nginx/sites-available/auth/.htpasswd;
		expires -1;
}
	location /api {
		auth_basic 		off;
		proxy_set_header	X-Real-IP $remote_addr;
		proxy_set_header	X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	X-NginX-Proxy true;
		proxy_pass		http://localhost:5000;
		proxy_set_header	Host $http_host;
		proxy_cache_bypass	$http_upgrade;
		proxy_redirect		off;
	}

}
server {
	listen 		80;
	server_name	victoria-heat.tk www.victoria-heat.tk;
	return 		301 https://www.victoria-heat.tk;
}
server{
	listen 		80;
	server_name	victoria-heat.ml www.victoria-heat.ml;
	return 		301 https://www.victoria-heat.ml;
}
